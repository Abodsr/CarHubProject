@using Microsoft.AspNetCore.Identity
@using CarHubProject.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Admin Dashboard -->
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
            </li>
        }
        else
        {
            <!-- User Dashboard -->
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="User" asp-action="UserDashboard">User Dashboard</a>
            </li>
        }

        <!-- Hello Username -->
        <li class="nav-item">
            <a class="nav-link text-white"
               asp-area="Identity"
               asp-page="/Account/Manage/Index"
               title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>

        <!-- Logout -->
        <li class="nav-item">
            <form class="form-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <!-- Login -->
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

        <!-- Register -->
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
