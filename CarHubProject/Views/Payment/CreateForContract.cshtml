@model CarHubProject.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<h1>Create Payment</h1>

<h4>Confirm Payment Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForContract">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContractId" />
            <input type="hidden" asp-for="Amount" />

            <dl class="row">
                <dt class="col-sm-4">Amount</dt>
                <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>
            </dl>

            <div class="form-group">
                <label asp-for="PaymentType" class="control-label"></label>
                <select asp-for="PaymentType" class="form-control">
                    <option value="Credit Card">Credit Card</option>
                    <option value="Cash">Cash</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                </select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Pay Now" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Car">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
