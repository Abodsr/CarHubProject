@model CarHubProject.ViewModels.CarDetailViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Details";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@(Model.CarDetails?.ImageUrl ?? "https://dummyimage.com/400x300/&text=No+Image")" class="img-fluid" alt="@(Model.CarDetails?.Model ?? "No Image")" style="max-height: 400px;" />
    </div>
    <div class="col-md-6 mb-3">
        <h4>Car</h4>
        <hr />
        @if (Model.CarDetails != null)
        {
            var car = Model.CarDetails;
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Model)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Model ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Year)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Year.ToString() ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.PricePerDay)
                </dt>
                <dd class = "col-sm-10">
                    @(car.PricePerDay.ToString("N0") ?? "N/A") EGP
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.SalePrice)
                </dt>
                <dd class = "col-sm-10">
                    @(car.SalePrice.ToString("N0") ?? "N/A") EGP
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Status)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Status ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Color)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Color ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Transmission)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Transmission ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.FuelType)
                </dt>
                <dd class = "col-sm-10">
                    @(car.FuelType ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Mileage)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Mileage.ToString() ?? "N/A")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => car.Brand)
                </dt>
                <dd class = "col-sm-10">
                    @(car.Brand?.BrandName ?? "N/A")
                </dd>
            </dl>
        }
        else
        {
            <p>Car details not available.</p>
        }
    </div>

    <div>
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Contract" asp-action="CreateContract" asp-route-carId="@Model.CarDetails?.Id" class="btn btn-primary">Rent or Buy</a>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("CreateContract", "Contract", new { carId = Model.CarDetails?.Id })" class="btn btn-primary">Rent or Buy</a>
        }
        <a asp-controller="Review" asp-action="Create" asp-route-carId="@Model.CarDetails?.Id" class="btn btn-secondary">Leave a Review</a>
    </div>
</div>

<hr />

<h3>Reviews</h3>
@if (Model.Reviews.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Rating</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews for this car yet.</p>
}


<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
