@model IEnumerable<CarHubProject.Models.Car>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CarHubProject.Models.User> SignInManager
@inject UserManager<CarHubProject.Models.User> UserManager

@{
    ViewData["Title"] = "Car Listings";
}
@{
    var brands = ViewBag.Brands as List<CarHubProject.Models.Brand>;
}

<!-- Search Section -->
<section class="search-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Find Your Perfect Match</h2>

        <form method="get" asp-action="Index" 
        asp-controller="Car">
            <div class="row g-3">
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Brand</label>
                    <select name="brand" class="form-select">
                        <option value="">All Brands</option>
                        @if (brands != null && brands.Any())
                        {
                            foreach (var b in brands)
                            {
                                <option value="@b.BrandName">@b.BrandName</option>
                            }
                        }

                    </select>
                </div>

                <!-- Price Type -->
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Price Type</label>
                    <select name="priceType" class="form-select">
                        @{
                            var priceTypeOptions = new List<Tuple<string, string>>
                            {
                                Tuple.Create("PricePerDay", "Price/Day"),
                                Tuple.Create("SalePrice", "Sale Price")
                            };

                            foreach (var option in priceTypeOptions)
                            {
                                var isSelected = (ViewBag.CurrentPriceType == option.Item1 || (string.IsNullOrEmpty(ViewBag.CurrentPriceType) && option.Item1 == "PricePerDay"));
                                if (isSelected)
                                {
                                    <option value="@option.Item1" selected>@option.Item2</option>
                                }
                                else
                                {
                                    <option value="@option.Item1">@option.Item2</option>
                                }
                            }
                        }
                    </select>
                </div>

                <!-- Price -->
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Price Range (EGP)</label>
                    <div class="input-group">
                        <input type="number" class="form-control" name="minPrice" placeholder="Min" min="0" />
                        <span class="input-group-text">-</span>
                        <input type="number" class="form-control" name="maxPrice" placeholder="Max" min="0" />
                    </div>
                </div>

                <!-- Fuel Type -->
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Fuel Type</label>
                    <select name="fuel" class="form-select">
                        <option value="">All Fuel Types</option>
                        <option value="Petrol">Petrol</option>
                        <option value="Diesel">Diesel</option>
                        <option value="Hybrid">Hybrid</option>
                        <option value="Electric">Electric</option>
                    </select>
                </div>

                <!-- Year -->
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Year</label>
                    <select name="year" class="form-select">
                        <option value="">All Years</option>
                        @for (int i = DateTime.Now.Year; i >= 2010; i--)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <!-- Sort By -->
                <div class="col-6 col-md-4 col-lg-2">
                    <label class="form-label fw-bold">Sort By</label>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            @(ViewBag.CurrentSort == "model_desc" ? "Model (Desc)" : 
                              ViewBag.CurrentSort == "priceperday_asc" ? "Price/Day (Asc)" :
                              ViewBag.CurrentSort == "priceperday_desc" ? "Price/Day (Desc)" :
                              ViewBag.CurrentSort == "saleprice_asc" ? "Sale Price (Asc)" :
                              ViewBag.CurrentSort == "saleprice_desc" ? "Sale Price (Desc)" :
                              ViewBag.CurrentSort == "year_asc" ? "Year (Asc)" :
                              ViewBag.CurrentSort == "year_desc" ? "Year (Desc)" : "Model (Asc)")
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="">Model (Asc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="model_desc">Model (Desc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="priceperday_asc">Price/Day (Asc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="priceperday_desc">Price/Day (Desc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="saleprice_asc">Sale Price (Asc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="saleprice_desc">Sale Price (Desc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="year_asc">Year (Asc)</a></li>
                            <li><a class="dropdown-item" asp-action="Index" 
                                   asp-route-brand="@Context.Request.Query["brand"]"
                                   asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                   asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                   asp-route-fuel="@Context.Request.Query["fuel"]"
                                   asp-route-year="@Context.Request.Query["year"]"
                                   asp-route-priceType="@Context.Request.Query["priceType"]"
                                   asp-route-sortOrder="year_desc">Year (Desc)</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search Cars
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>

<!-- Car Listings Section -->
<section id="listings" class="listings-section py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Featured Listings</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No cars found matching your criteria.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var car in Model)
                {
                    <div class="col-12 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@(car.ImageUrl)" class="card-img-top" alt="@car.Model" style="height:200px; object-fit:cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@car.Brand?.BrandName @car.Model</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@car.Year</h6>
                                <div class="d-flex flex-wrap justify-content-between align-items-center">
                                    <span class="badge bg-primary mb-1">Rent: @car.PricePerDay.ToString("N0") EGP/Day</span>
                                    <span class="badge bg-success mb-1">Sale: @car.SalePrice.ToString("N0") EGP</span>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-primary btn-sm">
                                        Details
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-outline-success btn-sm">
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-outline-danger btn-sm">
                                            Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-12 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm border-0 text-center d-flex flex-column justify-content-center align-items-center p-3"
                             style="border: 2px dashed #0d6efd; cursor: pointer;"
                             onclick="location.href='@Url.Action("Create", "Car")'">

                            <div class="text-primary mb-3" style="font-size: 50px;">
                                <i class="fas fa-plus-circle"></i>
                            </div>

                            <h5 class="mt-2 mb-0 text-primary">Add New Car</h5>
                        </div>
                    </div>
                }

            </div>
        }
    </div>
</section>